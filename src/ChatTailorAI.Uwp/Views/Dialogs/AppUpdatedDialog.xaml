<ContentDialog
    x:Class="ChatTailorAI.Uwp.Views.AppUpdatedDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:ChatTailorAI.Uwp.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="App Updated Successfully"
    RequestedTheme="Dark"
    SecondaryButtonText="Close"
    Style="{StaticResource DefaultContentDialogStyle}"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
        </Grid.RowDefinitions>
        <ScrollViewer Grid.Row="0" Visibility="Visible">
            <Grid Grid.Row="0" Margin="0,0,16,0">
                <StackPanel Orientation="Vertical">
                    <TextBlock
                        Margin="0,0,0,12"
                        Text="v2.2.2 ChatTailor AI:"
                        TextDecorations="Underline"
                        TextWrapping="Wrap" />
                    <TextBlock
                        Margin="0,0,0,12"
                        Text="• Added gpt-4o model from OpenAI"
                        TextWrapping="Wrap" />
                    <TextBlock
                        Margin="0,0,0,12"
                        Text="• Added gemini-1.5-flash model (Note: Rates depend on your plan with Google AI)"
                        TextWrapping="Wrap" />
                    <TextBlock
                        Margin="0,0,0,12"
                        Text="• Added basic support for LMStudio local models by providing a url to your localhost server"
                        TextWrapping="Wrap" />
                    <TextBlock
                        Margin="0,0,0,12"
                        Text="• General changes, fixes"
                        TextWrapping="Wrap" />
                </StackPanel>
            </Grid>
        </ScrollViewer>
    </Grid>
</ContentDialog>
